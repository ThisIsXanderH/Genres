<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id			=	"com.cagedrobot.genres"
		version		=	"0.1.0">
		<!-- NOTE: Without the xmlns:gap part, plugins flatout don't work -->
	<name>Genres!</name>
	<description>
		A fun and challenging game for writers
	</description>
	<author href="http://cagedrobot.com/ email='AlexanderFreemason1996@gmail.com'">
		Xander
	</author>
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<!-- Icon & Splash Screen Stuff 
	http://docs.build.phonegap.com/en_US/2.9.0/configuring_icons_and_splash.md.html#Icons%20and%20Splash%20Screens
	-->
	<icon src="icon.png"/>
	
	
	<gap:splash src="splash.png" />
	
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	
	<!-- TODO: Check to see if you need to whitelist external links 
	NOTE: Looks to be that that's only for webview stuff. It's fine if you're using external windows.
	-->
	<!--Media Plugin (For sound playing)-->
	<gap:plugin name="org.apache.cordova.media" version="0.2.13" />
	
	<!--Status Bar Plugin (For hiding status bar on iOS)-->
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>
	
	<!-- Inappbrowser Plugin (Despite the name, this is so links won't just open in app -->
	<gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />

	<!-- Vibrate Plugin (For vibrating. It's well named like that.) -->
	<gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />


	<!-- Fairly sure this "feature" stuff is ignored. Just source the plugin from  https://build.phonegap.com/plugins

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 	-->
</widget>
