<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id			=	"com.cagedrobot.genres"
		version		=	"0.1.0">
		<!-- NOTE: Without the xmlns:gap part, plugins flatout don't work -->
	<name>Genres!</name>
	<description>
		A fun and challenging game for writers
	</description>
	<author href="http://cagedrobot.com/ email='AlexanderFreemason1996@gmail.com'">
		Xander
	</author>
	<gap:platform name="ios" />
	<gap:platform name="android" />
	<gap:platform name="winphone" />
	
	<!-- Icon & Splash Screen Stuff 
	http://docs.build.phonegap.com/en_US/2.9.0/configuring_icons_and_splash.md.html#Icons%20and%20Splash%20Screens
	-->
	<icon src="icon.png"/>
	
	<!-- iOS 7.0+ -->
	<!-- iPhone / iPod Touch  -->
	<icon src="res\icon\ios\icon-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="res\icon\ios\icon-60@2x.png" gap:platform="ios" width="120" height="120" />
	
	<!-- iPad -->
	<icon src="res\icon\ios\icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="res\icon\ios\icon-76@2x.png" gap:platform="ios" width="152" height="152" />
	
	<!-- Settings Icon -->
	<icon src="res\icon\ios\icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="res\icon\ios\icon-small@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- Spotlight Icon -->
	<icon src="res\icon\ios\icon-40.png" gap:platform="ios" width="40" height="40" />
	<icon src="res\icon\ios\icon-40@2x.png" gap:platform="ios" width="80" height="80" />
	
	
	<!-- iOS 6.1 -->
	<!-- iPhone / iPod Touch -->
	<icon src="res\icon\ios\icon.png" gap:platform="ios" width="57" height="57" />
	<icon src="res\icon\ios\icon@2x.png" gap:platform="ios" width="114" height="114" />
	
	<!-- iPad -->
	<icon src="res\icon\ios\icon-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="res\icon\ios\icon-72@2x.png" gap:platform="ios" width="144" height="144" />
	
	<!-- iPhone Spotlight and Settings Icon -->
	<icon src="res\icon\ios\icon-small.png" gap:platform="ios" width="29" height="29" />
	<icon src="res\icon\ios\icon-small@2x.png" gap:platform="ios" width="58" height="58" />
	
	<!-- iPad Spotlight and Settings Icon -->
	<icon src="res\icon\ios\icon-50.png" gap:platform="ios" width="50" height="50" />
	<icon src="res\icon\ios\icon-50@2x.png" gap:platform="ios" width="100" height="100" />
	
	<!-- Android -->
	<icon src="res\icon\android\ldpi.png" gap:platform="android" gap:density="ldpi" />
	<icon src="res\icon\android\mdpi.png" gap:platform="android" gap:density="mdpi" />
	<icon src="res\icon\android\hdpi.png" gap:platform="android" gap:density="hdpi" />
	<icon src="res\icon\android\xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	<icon src="res\icon\android\xxhdpi.png" gap:platform="android" gap:density="xxhdpi" />
	
	<!--Windows Phone -->
	<icon src="res\icon\winphone\icon.png" gap:platform="winphone" />
	<icon src="res\icon\winphone\tileicon.png" gap:platform="winphone" gap:role="background" />
	
	<gap:splash src="splash.png" />
	
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	
	<!-- TODO: Check to see if you need to whitelist external links 
	NOTE: Looks to be that that's only for webview stuff. It's fine if you're using external windows.
	-->
	<!--Media Plugin (For sound playing)-->
	<gap:plugin name="org.apache.cordova.media" version="0.2.13" />
	
	<!--Status Bar Plugin (For hiding status bar on iOS)-->
	<gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
	
	<gap:config-file platform="ios" parent="UIStatusBarHidden">
		<true/>
	</gap:config-file>
	
	<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
		<false/>
	</gap:config-file>
	
	<!-- Inappbrowser Plugin (Despite the name, this is so links won't just open in app -->
	<gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />

	<!-- Vibrate Plugin (For vibrating. It's well named like that.) -->
	<gap:plugin name="org.apache.cordova.vibration" version="0.3.11" />


	<!-- Fairly sure this "feature" stuff is ignored. Just source the plugin from  https://build.phonegap.com/plugins

    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/contacts"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
 	-->
</widget>
